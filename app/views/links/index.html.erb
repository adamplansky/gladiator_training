<div class="container">
  <div class='col-sm-12'>

<h1>Ke stažení</h1>

    <% @links.each do |link| %>
      <h2><%= link_to link.title, link.link %> <i><%= link_to 'Edit', edit_link_path(link), class: 'btn btn-success' %> <%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %></i></h2>
    <% end %>

<%= link_to 'New Link', new_link_path, class: 'btn btn-success' %>

</div>
</div>