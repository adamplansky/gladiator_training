<% provide(:title, "Sign in") %>
<div class="container form-container">
  <h1>Sign in</h1>

  <div class="form-wrapper">
    <div class="col-sm-12">
      <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "control-label col-sm-4" %>
          <div class="col-sm-8">
            <%= f.text_field :email %>
          </div>
           <br class="clear" />
        </div>
        <div class="form-group">
          <%= f.label :password, class:"control-label col-sm-4" %>
          <div class="col-sm-8">
            <%= f.password_field :password %>
          </div>
           <br class="clear" />
        </div>
        <div class="form-group">
        <%= f.submit "Sign in", class: "btn btn-large btn-primary green-button" %>
        </div>
      <% end %>
      <div class="links">
        <p> <%= link_to "ZapomenutÃ© heslo", new_password_reset_path %></p>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
     <br class="clear" />
  </div>
</div>