<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Event date</th>
      <th>Registration end</th>
      <th>Url</th>
      <th>Image</th>
      <th>Description</th>
      <th>Min money</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_date %></td>
        <td><%= event.registration_end %></td>
        <td><%= event.url %></td>
        <td>  <%= cl_image_tag event.image, alt: event.title ,:width => 100, :height => 100 %></td>
        <td><%= event.description %></td>
        <td><%= event.min_money %></td>
        <td><%= event.contact %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

