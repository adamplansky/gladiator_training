<% provide(:title, "Sign in") %>

<%= form_for(:session, url: sessions_path, html: {class: 'form-signin'}) do |f| %>
<h1>Přihlásit se</h1>
  <%= f.label :email,class:"sr-only" %>
  <%= f.text_field :email, class: 'form-control', placeholder: 'email' %>
<div class="form-group">
  <%= f.label :password, 'Heslo:',class:"sr-only" %>
  <%= f.password_field :password, class: 'form-control',placeholder: 'heslo' %>
</div>
<div class="form-group">

  <%= f.submit "Přihlásit se", class: "btn btn-lg btn-primary btn-block" %>
</div>
<div class="form-group">
  <p> <%= link_to "Zapomenuté heslo", new_password_reset_path %></p>
  <p><%= link_to 'Registrace',"/signup" %></p>
</div>
<% end %>
