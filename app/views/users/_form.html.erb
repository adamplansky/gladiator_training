<%= form_for(@user, html: {class: 'form-signin'}) do |f| %>
  <h1>Nový uživatel</h1>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email ,class:"sr-only"%><br>
    <%= f.text_field :email, class: 'form-control',placeholder: 'Email' %>
  </div>
  <div class="form-group">
    <%= f.label :first_name, "Jméno",class:"sr-only" %><br>
    <%= f.text_field :first_name, class: 'form-control',placeholder: 'Jméno' %>
  </div>
  <div class="form-group">
    <%= f.label :surname, "Příjmení",class:"sr-only" %><br>
    <%= f.text_field :surname, class: 'form-control',placeholder: 'Příjmení' %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Heslo:",class:"sr-only" %><br>
    <%= f.password_field :password, class: 'form-control',placeholder: 'Heslo' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Potvrzení hesla:",class:"sr-only" %><br>
    <%= f.password_field :password_confirmation, class: 'form-control',placeholder: 'Potvrzení hesla' %>
  </div>
  <div class="form-group">
    <%= f.submit "Vytvořit účet", class:"btn btn-success" %>
  </div>
<% end %>
