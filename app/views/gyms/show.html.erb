<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= cl_image_tag current_user.image, alt: current_user.image, :crop=>"scale", width: 500,style: 'width:100%;height:auto;',class:"img-thumbnail" %>
      <div class="caption">
        <h3><%= @gym.name %> <%= link_to "web", @gym.web, class: "btn btn-primary" %></h3>

      </div>

    </div>
  </div>
  <div class="col-sm-6 col-md-4">
    <h2>Členové</h2>
    <table class="table table-striped table-hover">
      <tbody>
        <% @gym.users.each do |user| %>
        <tr>
          <td><%= user.fullname %></td>
          <td><%= link_to "profil", user_gymwars_path(user), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
