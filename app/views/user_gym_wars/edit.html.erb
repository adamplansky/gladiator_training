<div class="container">
  <div class='col-sm-12'>
    <h1>EDIT</h1>
    <%= form_for(@user,:url => edit_user_gymwars_path(@user), html: {class: 'form-signin'}) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group">
      <%= @user.fullname %>
    </div>
    <div class="form-group">
      <%= f.label :gym, "GYM" %>
      <%= f.collection_select :gym_id, Gym.all, :id, :name, {prompt: "Vyber GYM"}, { class: "form-control" } %>
    </div>

    <div class="actions">
      <%= f.submit "Potvrdit", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>

  </div>
</div>
