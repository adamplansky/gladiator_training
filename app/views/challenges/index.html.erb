<p id="notice"><%= notice %></p>

<h1>Listing Challenges</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Url</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.from_time %>-<%= challenge.to_time %></td>
        <td><%= challenge.url %></td>
        <td><%= challenge.name %></td>
        <td><%= link_to 'Show', challenge, class:"btn btn-danger" %></td>
        <% if admin_in? %>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nová výzva', new_challenge_path, class: 'btn btn-success' %>
