<div class="col-sm-12">

  <div>
    <%= link_to "Statistiky z předchozích čtvrletí", periods_path, class:"btn btn-info"  %>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <h1>Celkové výsledky</h1>
    <table class="table table-striped table-hover">
      <% @sum_all_points.each_with_index do |r,index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= link_to @users.find(r[0]).fullname, @users.find(r[0]) %></td>
        <td><%= r[1] %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="3" class="link_stats"><%= link_to "vše", statistic_path(0, period_id: @period.id) %></td>
      </tr>
    </table>

  </div>

  <% @results.each do |result| %>
  <div class="col-md-6">
    <h1><%= result[0].name %></h1>
    <table class="table table-striped table-hover">
      <% result[1].each_with_index do |r,index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= link_to @users.find(r[0]).fullname, @users.find(r[0]) %></td>
        <td><%= r[1] %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="3" class="link_stats"><%= link_to "vše", statistic_path(result[0], period_id: @period.id) %></td>
      </tr>
    </table>
  </div>
  <% end %>

</div>
