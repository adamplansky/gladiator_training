<div class='col-sm-6'>
  <table class='table table-striped table-hover'>
    <% @regular_users.each_with_index do |ru, index| %>
      <tr>
        <td> <%= index + 1 %>.</td>
        <% if ru.user == current_user %>
          <td class="<%= ru.user.is_some_member.to_s.upcase %>">
            <strong><%= ru.user.fullname %> </strong>
            <% if ru.user.is_free_open %>
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <% end %>
          </td>
        <% else %>
          <td class="<%= ru.user.is_some_member.to_s.upcase %>">
            <%= ru.user.fullname %>
            <% if ru.user.is_free_open %>
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <% end %>
          </td>
        <% end %>
        <td> <%= (l ru.created_at, format: :short) %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to 'Smazat', reservations_user_path(@reservation, ru.user), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>

      </tr>
    <% end %>
  </table>
</div>
