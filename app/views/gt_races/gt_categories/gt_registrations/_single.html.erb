<div class="zavodnik">
  <h2>Závodník</h2>
  <div class="form-group">
    <%= f.label "Jméno" %><br>
    <%= f.text_field :firstname , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Příjmení" %><br>
    <%= f.text_field :surname , class: 'form-control' %>
  </div>
  <div class="form-group">

    <%= f.radio_button(:sex, "M") %>
    <%= label_tag(:sex, "Muž") %>
    <%= f.radio_button(:sex, "F") %>
    <%= label_tag(:sex, "Žena") %>
  </div>
  <div class="form-group">
    <%= f.label "Datum narození" %><br>
    <%= f.date_select :birth , class: 'form-control',:start_year => 1901, end_year: 2020 %>
  </div>
</div>
