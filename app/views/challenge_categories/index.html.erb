<p id="notice"><%= notice %></p>

<h1>Listing Challenge Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenge_categories.each do |challenge_category| %>
      <tr>
        <td><%= challenge_category.name %></td>
        <td><%= link_to 'Show', challenge_category %></td>
        <td><%= link_to 'Edit', edit_challenge_category_path(challenge_category) %></td>
        <td><%= link_to 'Destroy', challenge_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge category', new_challenge_category_path %>
